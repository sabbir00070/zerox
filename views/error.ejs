<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= title || "Critical Alert" %></title>
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
body {
    font-family: 'Poppins', sans-serif;
    background-color: #0a0a0a;
    overflow: hidden;
}

/* Blood dripping background */
.blood-bg::after {
    content: '';
    position: fixed;
    top:0; left:0;
    width:100%; height:100%;
    background:
        radial-gradient(circle at 20% 20%, rgba(255,0,0,0.2), transparent 70%),
        radial-gradient(circle at 80% 80%, rgba(139,0,0,0.2), transparent 70%),
        radial-gradient(circle at 50% 50%, rgba(255,0,0,0.15), transparent 70%);
    pointer-events: none;
    z-index: 0;
}

/* Dripping drops animation */
@keyframes drip {
    0% { transform: translateY(-50px) rotate(0deg); opacity: 0; }
    50% { opacity: 1; }
    100% { transform: translateY(250px) rotate(180deg); opacity: 0; }
}
.drop {
    position: absolute;
    width: 6px;
    height: 12px;
    background: linear-gradient(180deg, #ff0000 0%, #8b0000 100%);
    border-radius: 50%;
    animation: drip 3s linear infinite;
    opacity: 0;
}

/* Sparks */
@keyframes spark {
    0% { transform: translateY(0) scale(1); opacity: 1; }
    50% { transform: translateY(-20px) scale(0.5); opacity: 0.7; }
    100% { transform: translateY(-50px) scale(0); opacity: 0; }
}
.spark {
    position: absolute;
    width: 3px;
    height: 3px;
    background: yellow;
    border-radius: 50%;
    animation: spark 1.5s linear infinite;
}

/* Dialog shake */
@keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-6px); }
    50% { transform: translateX(6px); }
    75% { transform: translateX(-6px); }
}
.animate-shake { animation: shake 0.6s infinite; }
</style>
</head>
<body class="blood-bg flex items-center justify-center min-h-screen px-4 relative">

<!-- Dripping drops -->
<% for(let i=0;i<12;i++){ %>
<div class="drop" style="left:<%= i*8 %>%; animation-delay: <%= Math.random()*3 %>s;"></div>
<% } %>

<!-- Sparks -->
<% for(let i=0;i<10;i++){ %>
<div class="spark" style="left:<%= Math.random()*100 %>%; top:<%= Math.random()*100 %>%; animation-delay:<%= Math.random()*2 %>s;"></div>
<% } %>

<!-- Modal/dialog -->
<div class="relative z-10 w-full max-w-md">
    <div class="fixed inset-0 bg-black bg-opacity-80 backdrop-blur-sm"></div>
    <div class="relative bg-gray-900 text-red-100 rounded-3xl shadow-2xl p-8 sm:p-10 text-center z-20 border-2 border-red-700 animate-shake">
        
        <!-- Skull icon -->
       <div class="mb-4 animate-pulse">
  <img src="https://i.ibb.co/9HRxMTyf/f7e6253fff.jpg" alt="Danger Icon" class="mx-auto w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48">
</div>
        
        <!-- Heading -->
        <h1 class="text-3xl sm:text-4xl font-bold mb-3 text-red-500 tracking-wide"><%= message || "SYSTEM CRITICAL!" %></h1>
        
        <!-- Description -->
        <p class="text-red-300 mb-6 text-sm sm:text-base leading-relaxed">
            <%= description || "A critical failure has occurred. Exit immediately or risk permanent damage!" %>
        </p>

        <!-- Reload Button -->
        <button onclick="location.reload()"
            class="px-6 py-3 bg-red-700 hover:bg-red-600 text-white font-semibold rounded-xl shadow-lg transition transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-opacity-50">
            RELOAD
        </button>

        <!-- Illustration -->
        <div class="mt-6">
            <imgg src="" alt="Danger Illustration"
                class="mx-auto w-32 sm:w-36 h-auto opacity-80 transform transition hover:scale-110">
        </div>

        <!-- Footer -->
        <div class="mt-4 text-red-500 text-xs sm:text-sm tracking-widest">
            ZEROX BOMBING â€¢ &copy; <%= new Date().getFullYear() %>
        </div>
    </div>
</div>

</body>
</html>