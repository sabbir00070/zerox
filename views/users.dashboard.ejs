<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= title ? title : "BOMBER PRO" %></title>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="icon" href="<%= icon %>" type="image/png" sizes="16x16">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet"/>
<style>
  body {
    font-family: 'Poppins', sans-serif;
  }
  .avatar-container { position: relative; width: 96px; height: 96px; border-radius: 50%; background: white; display: flex; align-items: center; justify-content: center; box-shadow: 0 0 15px rgba(255,255,255,0.2); transition: transform 0.3s ease, box-shadow 0.3s ease; overflow: visible; }
  .avatar-container:hover { transform: scale(1.08); box-shadow: 0 0 25px rgba(0, 180, 255, 0.5); }
  .avatar-glow { position: absolute; top: -8px; left: -8px; width: 112px; height: 112px; border-radius: 50%; background: linear-gradient(45deg, #00f, #0ff, #00f); filter: blur(12px); opacity: 0.6; animation: pulse 2s infinite alternate; z-index: -1; }
  @keyframes pulse { 0% { opacity: 0.5; transform: scale(1); } 100% { opacity: 0.8; transform: scale(1.1); } }
  .status-badge { position: absolute; bottom: 0; right: 0; width: 18px; height: 18px; border-radius: 50%; border: 2px solid white; background-color: #22c55e; }
  .stat-box:hover { transform: scale(1.05); background: rgba(255, 255, 255, 0.3); }
  .transition-smooth { transition: all 0.3s ease-in-out; }
  .btn-send:active { transform: scale(0.98); box-shadow: 0 0 15px rgba(0,0,0,0.1) inset; }
  #snow-container { pointer-events: none; position: fixed; inset: 0; z-index: 50; overflow: hidden; }
  .snowflake { position: absolute; top: -10px; background-color: rgba(255,255,255,0.8); border-radius: 50%; filter: blur(1px); width: 5px; height: 5px; pointer-events: none; animation-name: fall, twinkle; animation-timing-function: linear; animation-iteration-count: infinite; }
  @keyframes fall { 0% { transform: translateX(0) translateY(0); } 50% { transform: translateX(10px) translateY(50vh); } 100% { transform: translateX(-10px) translateY(100vh); } }
  @keyframes twinkle { 0%,100% { opacity: 0.5; } 50% { opacity: 1; } }
  .loader {
  width: 20px;
  height: 20px;
  border: 2px solid white;
  border-top: 2px solid #3b82f6;
  border-radius: 50%;
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  animation: spin 1s linear infinite;
}
@keyframes spin {
  0% {
    transform: translateY(-50%) rotate(0deg);
  }
  100% {
    transform: translateY(-50%) rotate(360deg);
  }
}
</style>
</head>
<body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-200 via-blue-400 to-blue-700">
<div id="snow-container"></div>
<div class="relative w-[320px] rounded-3xl bg-white/20 backdrop-blur-xl border border-white/30 shadow-2xl p-6 text-center">
  <div class="flex justify-center -mt-16 mb-4 relative">
    <div class="avatar-container">
      <div class="avatar-glow"></div>
      <img src="data:image/jpeg;base64, <%= photo %>" class="w-20 h-20 rounded-full">
      <div class="status-badge"></div>
    </div>
  </div>
  <h2 class="text-white text-xl font-semibold"><%= tgUser.first_name %> <%= tgUser.last_name %></h2>
  <div class="mt-4 space-y-3">
    <div class="flex items-center justify-between bg-gradient-to-r from-white/25 to-white/10 border border-white/30 rounded-full px-4 py-2 transition-smooth hover:from-white/30 hover:to-white/15">
      <div class="flex items-center gap-2 text-white text-sm">
        <i class="ri-at-line w-4 h-4 flex-shrink-0 flex items-center justify-center opacity-80"></i>
        <span>Username</span>
      </div>
      <span class="text-white font-semibold text-sm"><%= tgUser.username %></span>
    </div>
    <div class="flex items-center justify-between bg-gradient-to-r from-white/25 to-white/10 border border-white/30 rounded-full px-4 py-2 transition-smooth hover:from-white/30 hover:to-white/15">
      <div class="flex items-center gap-2 text-white text-sm">
        <i class="ri-fingerprint-2-fill w-4 h-4 flex-shrink-0 flex items-center justify-center opacity-80"></i>
        <span>Chat ID</span>
      </div>
      <span class="text-white font-semibold text-sm"><%= chatId %></span>
    </div>
  </div>
  <div class="grid grid-cols-3 gap-3 mt-6">
    <div class="bg-white/20 rounded-2xl py-3 flex flex-col items-center justify-center relative stat-box transition-smooth">
      <h3 class="coin text-white text-lg font-bold"><%= user.coin %></h3>
      <p class="text-white/70 text-xs mt-1">Coins</p>
    </div>
    <div class="bg-white/20 rounded-2xl py-3 flex flex-col items-center justify-center relative stat-box transition-smooth">
      <h3 class="text-white text-lg font-bold"><%= cutCoin %></h3>
      <p class="text-white/70 text-xs mt-1">Cost</p>
    </div>
    <div class="bg-white/20 rounded-2xl py-3 flex flex-col items-center justify-center relative stat-box transition-smooth">
      <h3 class="text-white text-lg font-bold">ON</h3>
      <p class="text-white/70 text-xs mt-1">Status</p>
    </div>
  </div>
  <div class="mt-6 w-full text-left">
    <label for="phoneInput" class="text-white/70 text-sm mb-1 inline-block">Phone Number</label>
    <div class="relative w-full">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-white/50" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
        <path d="M6.62 10.79a15.053 15.053 0 006.59 6.59l2.2-2.2a1 1 0 011.11-.21 11.72 11.72 0 003.68.59 1 1 0 011 1V20a1 1 0 01-1 1C10.07 21 3 13.93 3 5a1 1 0 011-1h3.5a1 1 0 011 1c0 1.27.21 2.52.59 3.68a1 1 0 01-.21 1.11l-2.2 2.2z"/>
      </svg>
      <input type="tel" id="phoneInput" placeholder="01xxxxxxxxx" class="w-full bg-white/20 border border-white/30 rounded-2xl px-10 py-3 text-white placeholder-white/70 text-left outline-none focus:ring-2 focus:ring-white/50">
    </div>
    <p class="text-white/50 text-xs mt-1">Enter your phone number with country code if needed.</p>
  </div>
  <div class="my-4 border-t border-white/20"></div>
  <p class="text-white/50 text-xs mb-4">SMS will be sent instantly after clicking SEND SMS.</p>
  <button id="sendBtn" class="btn-send w-full bg-white text-blue-600 font-semibold py-3 rounded-full flex items-center justify-center gap-2 shadow-lg hover:scale-[1.02] transition-smooth relative">
    <i class="ri-send-plane-line w-5 h-5"></i>
    <span class="btn-text">SEND SMS</span>
    <div class="loader hidden"></div>
  </button>
  <input class="token" type="hidden" value="<%= token  %>" />
</div>
<script>
const container = document.getElementById('snow-container');
for (let i = 0; i < 70; i++) {
  const flake = document.createElement('div');
  flake.className = 'snowflake';
  flake.style.left = Math.random() * window.innerWidth + 'px';
  const size = Math.random() * 6 + 4;
  flake.style.width = flake.style.height = size + 'px';
  flake.style.animationDuration = (Math.random() * 6 + 4) + 's';
  flake.style.animationDelay = Math.random() * 5 + 's';
  container.appendChild(flake);
}
</script><script>
  const btn = document.getElementById('sendBtn');
  const btn_text = document.querySelector('.btn-text');
  const loader = document.querySelector('.loader');
  const number_i = document.getElementById('phoneInput');
  const token = document.querySelector('.token');
  const coin = document.querySelector('.coin');

  btn.addEventListener('click', async () => {
    let phoneNumber = number_i.value.trim();

    if (!phoneNumber) {
      alert("Number is empty");
      return;
    }
    phoneNumber = phoneNumber.replace(/^(\+88)/, '').replace(/[\s-]/g, '');
    if (!/^01\d{9}$/.test(phoneNumber)) {
      alert("Invalid number format. Example: 01XXXXXXXXX");
      return;
    }

    btn.disabled = true;
    btn_text.innerText = 'Sending...';
    loader.classList.remove("hidden");

    try {
      const res = await fetch(`/api-send`, {
        method: "POST",
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          phone: phoneNumber,
          q: token.value.trim()
        })
      });

      const data = await res.json();

      if (data.status === true) {
        coin.innerText = data.left_coin;
      }

      alert(data.message);

    } catch (err) {
      alert(`Error: ${err}`);
    } finally {
      btn.disabled = false;
      btn_text.innerText = 'SEND SMS';
      loader.classList.add("hidden");
    }
  });
</script>

</body>
</html>